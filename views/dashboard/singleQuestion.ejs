  <!-- Include the Quill library -->
<script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

<!-- Initialize Quill editor -->
<script>
  var quill = new Quill('#editor', {
    theme: 'snow'
  });
  var editor_content = quill.container.innerHTML
  function getEditorContent() {
   return quill.root.innerHTML.trim()
}




document.getElementById("answerForm").addEventListener("submit", async function(event){
  event.preventDefault()
  const answerContent = getEditorContent()
  const questionId = document.getElementById("questionId").value
  
 const response =  await fetch("/answer",{
    method : "POST",
    headers : {
      'Content-Type' : 'application/json'
    },
    body : JSON.stringify({text : answerContent,questionId : questionId})
  })
const data =   await response.json()
if(data.status == 200){
  window.location.reload()
}else{
  alert("Something went wrong")
}
  
})


</script>
